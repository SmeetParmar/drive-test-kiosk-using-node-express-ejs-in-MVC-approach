<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/head'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/nav'); -%>
        <!-- Page Header-->
        <header class="masthead">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Admin</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5 ">
                <div class="row justify-content-center ">
                    <div class="col-md-6 border border-dark border-3 px-4">
                        <p class="text-primary fs-1">Candidates</p>
                        <div class="my-5">
                            <form action="/form/admin/filterData" method="post">
                                <p>
                                    Filter Data : 
                                    <input type="submit" class="btn btn-primary text-uppercase p-2" id="submitButton" name="submitButton" value="Pass"> 
                                    <input type="submit" class="btn btn-primary text-uppercase p-2" id="submitButton" name="submitButton" value="Fail"> 
                                </p>
                                </form>
                            <% data.forEach(function(eachData) { %>
                                <p class="border border-2 p-4 text-center">
                                     Name :  <%= eachData.firstName %> <%= eachData.lastName %> <br>
                                     Result : <%= eachData.result %> <br><br>

                                     <% if(eachData.result == "Pass"){ %>
                                    <button type="submit" class="btn btn-primary text-uppercase p-2">Approve License</button>
                                    <% } %>
                                </p>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- Bootstrap core JS-->
        <%- include('layouts/script'); -%>
    </body>
</html>