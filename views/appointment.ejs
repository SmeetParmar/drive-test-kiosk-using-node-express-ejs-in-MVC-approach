<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/head'); -%>
    <body>
        <!-- Navigation-->
        <%- include('layouts/nav'); -%>
        <!-- Page Header-->
        <header class="masthead">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Admin</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5 ">
                <div class="row justify-content-center ">
                    <div class="col-md-6 border border-dark border-3 px-4">
                        <p class="text-primary fs-1">Appointment</p>
                        <div class="my-5">
                            <form id="contactForm" action="/appointment/slot" method="post">
                                <div class="form-floating">
                                    Date : 
                                    <input id="date" name="date" type="date"/>
                                    <span id="error_message"></span>
                                </div>
                                <br>
                                <!-- <div class="form-floating">
                                    <input class="form-control" id="time" name="time" type="time" min="09:00" max="14:00" step="1800"/>
                                    <span id="error_message"></span>
                                    <label for="name">Time</label>
                                </div> -->
                                <div class="form-floating">
                                    Time : 
                                    <select id="time" name="time">
                                        <option selected disabled>Select time</option>
                                        <option>9:00</option>
                                        <option>9:30</option>
                                        <option>10:00</option>
                                        <option>10:30</option>
                                        <option>11:00</option>
                                        <option>11:30</option>
                                        <option>12:00</option>
                                        <option>12:30</option>
                                        <option>13:00</option>
                                        <option>13:30</option>
                                        <option>14:00</option>
                                        <option>14:30</option>
                                    </select>
                                    <span id="error_message"></span>
                                </div>
                                <br />
                                <!-- Submit Button-->
                                <button class="btn btn-primary text-uppercase" id="addSlot" type="submit">Add Slot</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
        <%- include('layouts/footer'); -%>
        <!-- Bootstrap core JS-->
        <%- include('layouts/script'); -%>
    </body>
</html>